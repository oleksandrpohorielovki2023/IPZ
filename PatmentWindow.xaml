<Window x:Class="IPZ_Lab2.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPZ_Lab2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Оплата карткою" FontSize="24" FontWeight="Bold" Foreground="#3E2723" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="До сплати: " FontSize="18" Foreground="Gray"/>
                    <TextBlock x:Name="AmountText" Text="0.00 грн" FontSize="20" FontWeight="Bold" Foreground="#FF7043"/>
                </StackPanel>
            </Border>

            <Border Background="#37474F" CornerRadius="15" Padding="20" Height="200">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Номер картки" Foreground="White" Opacity="0.7" FontSize="12"/>
                    <TextBox x:Name="CardNumberTxt" Height="30" FontSize="16" FontWeight="Bold" MaxLength="16" 
                             Background="White" BorderThickness="0" Margin="0,5,0,20" Padding="5"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Термін дії (MM/YY)" Foreground="White" Opacity="0.7" FontSize="12"/>
                            <TextBox x:Name="ExpiryTxt" Height="30" FontSize="16" MaxLength="5" 
                                     Background="White" BorderThickness="0" Margin="0,5,0,0" Padding="5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="CVV" Foreground="White" Opacity="0.7" FontSize="12"/>
                            <TextBox x:Name="CvvTxt" Height="30" FontSize="16" MaxLength="3" 
                                     Background="White" BorderThickness="0" Margin="0,5,0,0" Padding="5"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Button Content="ОПЛАТИТИ" Height="50" Margin="0,30,0,0" 
                    Background="#FF7043" Foreground="White" FontWeight="Bold" FontSize="18"
                    Cursor="Hand" Click="Button_Pay_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Скасувати" Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="0,10,0,0" Cursor="Hand" Click="Button_Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
