<Window x:Class="IPZ_Lab2.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FFF8E1">
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Новий акаунт" FontSize="26" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#FF7043"/>

            <Label Content="Як вас звати?" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource {x:Type TextBox}}"/>
            <Label Content="Email (Логін)" FontWeight="SemiBold"/>
            <TextBox x:Name="RegEmailTxt"
                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource {x:Type TextBox}}"/>

            <Label Content="Пароль" FontWeight="SemiBold"/>
            <PasswordBox x:Name="RegPassBox" Padding="5" FontSize="14" Margin="0,0,0,10"/>

            <Label Content="Повторіть пароль" FontWeight="SemiBold"/>
            <PasswordBox x:Name="RegConfirmPassBox" Padding="5" FontSize="14" Margin="0,0,0,20"/>

            <Button Content="ЗАРЕЄСТРУВАТИСЯ" 
                    Style="{StaticResource MainButtonStyle}" 
                    Click="Button_Register_Click"/>

            <Button Content="Скасувати" Background="Transparent" Foreground="Gray" BorderThickness="0"
                    Margin="0,10,0,0" Cursor="Hand" Click="Button_Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>