<Window x:Class="FastFoodDelivery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FastFood Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Авторизація" FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Логін:"/>
            <TextBox Text="{Binding Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Пароль:"/>
            <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="УВІЙТИ" 
                Style="{StaticResource MainButtonStyle}" 
                Click="Button_Login_Click" Margin="0,0,0,15"/>

            <Button Content="Створити акаунт" 
                Style="{StaticResource SecondaryButtonStyle}" 
                Click="Button_OpenRegister_Click" 
                Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>